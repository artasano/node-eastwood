{
  "version": "0.1.0",
  "command": "node-gyp",
  "isShellCommand": true,
  "args": [],
  "showOutput": "always",
  "echoCommand": true,
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "configure-build",
      "args": [
        "configure", "build"
      ]
    },
    {
      "taskName": "rebuild",
      "args": [
        "rebuild"
      ]
    },
    {
      "taskName": "build",
      "args": [
        "build", "--verbose"
      ]
    },
    {
      "taskName": "clean",
      "args": [
        "clean"
      ]
    }
  ]
}}