{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Tests",
      "preLaunchTask": "configure-debug-build",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "--no-timeouts", "--colors",
        "tests/test-*.js"
      ],
      "cwd": "${workspaceRoot}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Addon Util Tests",
      // can't find out how to build test addon... '"preLaunchTask": "build-util-test-addon",
      // cd tests/util, node-gyp clean configure --debug build
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "--no-timeouts", "--colors",
        "./test-*.js"
      ],
      "cwd": "${workspaceRoot}/tests/util"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceRoot}/libs/index.js"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Process",
      "address": "localhost",
      "port": 5858
    }
  ]
}